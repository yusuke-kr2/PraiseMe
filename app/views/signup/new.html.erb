<div class="signup-wrapper">
  <div class="signup-card">

    <h1 class="signup-title">ユーザー登録</h1>

    <%= form_with model: @user, url: signup_index_path, local: true do |f| %>

      <div class="form-group">
        <%= f.label :nickname, "ニックネーム", class: "form-label" %><br>
        <%= f.text_field :nickname, class: "form-input" %>
      </div>

      <div class="form-group submit-wrapper">
        <%= f.submit "登録する", class: "signup-btn" %>
      </div>

    <% end %>

  </div>
</div>
